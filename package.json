{
  "name": "@unly/simple-logger",
  "version": "1.0.0-beta4",
  "description": "Simple universal logger for node/browser, with prefix, time and colors\n\n",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UnlyEd/simple-logger.git"
  },
  "author": "unlyEd",
  "license": "MIT",
  "typings": "dist/index.d.ts",
  "bugs": {
    "url": "https://github.com/UnlyEd/simple-logger/issues"
  },
  "homepage": "https://github.com/UnlyEd/simple-logger",
  "files": [
    "dist",
    "src"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "test:watch": "tsdx test --watchAll",
    "lint": "tsdx lint",
    "lint:fix": "tsdx lint --fix",
    "prepare": "tsdx build",
    "release": "yarn publish",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 160,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/simple-logger.esm.js",
  "size-limit": [
    {
      "path": "dist/simple-logger.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/simple-logger.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "chalk": "4.1.1",
    "lodash.noop": "3.0.1"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "4.10.2",
    "@types/lodash.noop": "3.0.6",
    "husky": "6.0.0",
    "size-limit": "4.10.2",
    "tsdx": "0.14.1",
    "tslib": "2.2.0",
    "typescript": "4.2.4"
  },
  "peerDependencies": {}
}
